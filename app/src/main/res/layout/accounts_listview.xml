<?xml version="1.0" encoding="utf-8"?>

<!-- resource: https://abhiandroid.com/ui/listview -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accounts_listview_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/accounts_listview_textview"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/accounts_total_listview_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/accounts_total_listview_textview"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/accounts_listview_button_delete"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toEndOf="@+id/accounts_listview_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/accounts_listview_button_delete"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="344dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintStart_toStartOf="@+id/accounts_listview_textview"
        app:layout_constraintTop_toTopOf="@+id/accounts_listview_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>